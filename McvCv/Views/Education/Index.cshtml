@using McvCv.Models.Entity
@model List<TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Eğitim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık 2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.Title</td>
            <td>@x.Subtitle</td>
            <td>@x.Subtitle2</td>
            <td>@x.GPA</td>
            <td>@x.Date</td>
            <td><a href="/Education/DeleteEducation/@x.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Education/GetEducation/@x.Id" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Education/AddEducation" class="btn btn-primary">Yeni Eğitim Ekle</a>

