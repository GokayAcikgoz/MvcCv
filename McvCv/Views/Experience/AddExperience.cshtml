
@{
    ViewBag.Title = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yeni Deneyim Ekleme sayfası</h4>
<br />
<form method="post">
    <input type="text" name="Title" class="form-control" placeholder="Başlığı Yazınız" />
    <br />
    <input type="text" name="SubTitle" class="form-control" placeholder="Alt Başlık" />
    <br />
    <input type="text" name="Date" class="form-control" placeholder="Çalışma Tarihi" />
    <br />
    <textarea placeholder="Açıklama giriniz" name="Description" class="form-control" rows="5"></textarea>
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>

