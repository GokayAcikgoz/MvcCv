
@model McvCv.Models.Entity.TblSocial

@{
    ViewBag.Title = "UpdateSocial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Sosyal Medya Düzenleme sayfası</h4>
<br />
<form method="post">
    <!-- iligi alana direkt ilgili değeri doldurmak için-->

    @Html.Label("Sosyal Medya Adı")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Link")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />
    @Html.Label("İkon")
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Güncelle</button>
</form>

