@model McvCv.Models.Entity.TblSkills
@{
    ViewBag.Title = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yeni Yetenek ekleme sayfası</h4>
<br />
<form method="post">
 <!-- iligi alana direkt ilgili değeri doldurmak için-->

    @Html.Label("Yetenek Açıklaması")
    @Html.TextBoxFor(x => x.Talent, new { @class = "form-control" })
    <br />
    @Html.Label("Derece")
    @Html.TextBoxFor(x => x.Progress, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Kaydet</button>
</form>

