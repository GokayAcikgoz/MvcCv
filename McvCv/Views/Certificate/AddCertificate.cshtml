@model McvCv.Models.Entity.TblCertificates
@{
    ViewBag.Title = "AddCertificate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Sertifika Ekleme sayfası</h4>
<br />
<form method="post">
    <!-- iligi alana direkt ilgili değeri doldurmak için-->

    @Html.Label("Sertifika Açıklaması")
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Kaydet</button>
</form>

